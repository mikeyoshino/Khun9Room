@using Microsoft.AspNetCore.Identity
@using System.Security.Claims;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject UserManager<ApplicationUser> userManager



    <ul class="nav navbar-nav ml-auto">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                <img src="@userManager.GetUserAsync(User).Result?.ImageUrl" class="rounded"> @userManager.GetUserAsync(User).Result?.FirstName</a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="#">ข้อมูลส่วนตัว</a>
                    <a class="dropdown-item" asp-area="user" asp-controller="tenant" asp-action="Index">คนเช่า</a>
                    <a class="dropdown-item" asp-area="user" asp-controller="property" asp-action="Index">รายชื่อสถาที่</a>
                    <a class="dropdown-item" asp-area="user" asp-controller="room" asp-action="Index">ห้องพัก</a>
                    <div class="dropdown-divider"></div>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                    </form>
                </div>
            </li>

            <li class="nav-item"></li>

            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
